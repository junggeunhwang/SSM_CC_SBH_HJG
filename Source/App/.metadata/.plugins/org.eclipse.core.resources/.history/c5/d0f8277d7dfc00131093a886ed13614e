package com.ssm.view;

import com.example.cyclists.R;
import com.ssm.controller.CycleMateFragment;
import com.ssm.controller.MainActivity;

import android.view.View;
import android.view.View.OnClickListener;


public class CycleMateLayout {

	CycleMateFragment fragment;
	
	public CycleMateLayout(CycleMateFragment instance) {
		fragment = instance;
	}
	
	public void init(){
		fragment.getView().findViewById(R.id.menu_button_cyclemate).setOnClickListener(buildButtonClickListner());
	}
	
	private OnClickListener buildButtonClickListner(){
		return new OnClickListener(){
				
					@Override
					public void onClick(View v) {
						switch(v.getId())
						{
						case R.id.menu_button_cyclemate :
							((MainActivity)fragment.getActivity()).getLayout().open_button(v);
							break;
						}
					}
				};
	}
}
