package com.ssm.cyclists.controller;

import android.content.Context;
import android.database.sqlite.SQLiteDatabase;
import android.database.sqlite.SQLiteDatabase.CursorFactory;
import android.database.sqlite.SQLiteOpenHelper;
import android.location.Location;

public class DataBaseManager extends SQLiteOpenHelper {

	DataBaseManager manager;
	SQLiteDatabase db;
	Context context;

	public DataBaseManager(Context context, String name, CursorFactory factory,
			int version) {
		super(context, name, factory, version);
		this.manager = this;
		this.context = context;
	}

	@Override
	public void onCreate(SQLiteDatabase db) {
		String sql = "CREATE TABLE last_location("+
				"num INTEGER PRIMARY KEY AUTOINCREMENT,"+
				"latitude FLOAT,"+
				"longitude FLOAT);";
		db.execSQL(sql);
	}

	@Override
	public void onUpgrade(SQLiteDatabase db, int arg1, int arg2) {
		db.execSQL("DROP TABLE IF EXSITS last_location");
		onCreate(db);
	}
	
	public void updateLastLocation(Location loc){
	
		db = 
		
	}
	
	public void close(){
		db.close();
	}

}
