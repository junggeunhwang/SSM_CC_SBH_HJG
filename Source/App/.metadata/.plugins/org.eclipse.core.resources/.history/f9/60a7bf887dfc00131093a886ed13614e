package com.ssm.view;

import com.example.cyclists.R;
import android.view.View;
import android.view.View.OnClickListener;

import com.ssm.controller.CycleTrackerFragment;
import com.ssm.controller.MainActivity;

public class CycleTrackerLayout {

	CycleTrackerFragment fragment;
	
	public CycleTrackerLayout(CycleTrackerFragment instance) {
		fragment = instance;
	}
	
	public void init(){
		fragment.getView().findViewById(R.id.menu_button_cycletracker).setOnClickListener(buildButtonClickListner());
	}
	
	private OnClickListener buildButtonClickListner(){
		return new OnClickListener(){
				
					@Override
					public void onClick(View v) {
						switch(v.getId())
						{
						case R.id.menu_button_cycletracker :
							((MainActivity)fragment.getActivity()).getLayout().open_button(v);
							break;
						}
					}
				};
	}
}
