	public Location getCurrnetLocation(){

		return current_loc;
	}

	public String getAddress(){
		StringBuffer juso = new StringBuffer();
		
		List<Address> addresses;
		
		try {
			addresses = geoCoder.getFromLocation(current_loc.getLatitude(), current_loc.getLongitude(),1);
			for(Address addr: addresses){
				int index = addr.getMaxAddressLineIndex();
				for(int i = 0 ; i <= index ; i++){
					juso.append(addr.getAddressLine(i));
					juso.append(" ");
				}
					juso.append("\n");
			}
		} catch (IOException e) {
			e.printStackTrace();
		}
		return juso.toString();		
	}

	public LocationListener getLocation_listener() {
		return location_listener;
	}

		
