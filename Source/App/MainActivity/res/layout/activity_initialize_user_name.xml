<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background_initialize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal"
    android:background="@color/bk_color_gray_heavy"
    android:weightSum="1">

	<View
		android:layout_width="match_parent"
	   	android:layout_height="0dip"
	   	android:layout_weight="0.2"/>
    	    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:orientation="horizontal"
	    android:layout_weight="0.25"
	    android:weightSum="1">
	    <View
			android:layout_width="0dip"
		   	android:layout_height="match_parent"
		   	android:layout_weight="0.3"/>
	    <ImageView
	        android:layout_width="0dip"
	        android:layout_height="match_parent" 
	        android:src="@drawable/bk_circle_bicycle_gray"
	        android:scaleType="fitCenter"
	        android:layout_weight="0.4"/>	    
	    <View
			android:layout_width="0dip"
		   	android:layout_height="match_parent"
		   	android:layout_weight="0.3"/>
	</LinearLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:orientation="vertical" 
        android:weightSum="1"
        android:layout_weight="0.55">
	    <View
	   	    android:layout_width="match_parent"
	   	    android:layout_height="0dip"
	   	    android:layout_weight="0.35"/>

	   	<EditText
	   	    android:id="@+id/et_user_name_initialize"
	   	    android:layout_width="match_parent"
	   	    android:layout_height="0dip"
	   	    android:layout_weight="0.15"
	   	    android:background="@drawable/rounded_edittext"
	   	    android:hint="Please enter your name."
	   	    android:paddingBottom="10dp"
	   	    android:paddingLeft="5dp"
	   	    android:paddingTop="10dp"
	   	    android:textSize="12sp" />
	   	<View
	   	    android:layout_width="match_parent"
	   	    android:layout_height="0dip"
	   	    android:layout_weight="0.1"/>
		<Button
		    android:id="@+id/btn_enjoy_cycling_initialize"
		    android:layout_width="match_parent"
		    android:layout_height="0dip"
		    android:background="@drawable/start_bicycle_btn_bg_gray"
		    android:text="Enjoy Cycling"
		    android:textColor="@color/white"
		    android:layout_weight="0.15"/>
		<View
	   	    android:layout_width="match_parent"
	   	    android:layout_height="0dip"
	   	    android:layout_weight="0.25"/>
		<TextView
	        android:id="@+id/app_name_cruise"
	        android:layout_width="match_parent"
	        android:layout_height="20dp"
	        android:layout_marginBottom="10dp"
	        android:gravity="center_vertical|center_horizontal"
	        android:text="@string/app_name"
	        android:textStyle="bold"
	        android:textSize="13sp"
	        android:textColor="@color/white" />
    </LinearLayout>
    
</LinearLayout>
